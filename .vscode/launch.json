  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Brave (?)",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "url": "http://localhost:6006/*"
    },
    {
      "name": "Attach to Vite (X)",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "url": "http://localhost:3000/*"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend (Working!)",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "runtimeArgs": ["--remote-debugging-port=9222"],
      "sourceMaps": true
    }
  ]
}
